<style>

    .bigbox{
        width: 100%;
        /* margin: 1rem auto; */
    }

    .mainBox{
        /* border: 5px solid #af011d; */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    
        padding: 1rem;
        width: fit-content;
        margin: auto;

        box-shadow: -9px -9px 30px white;

        
    }

    .form{
        /* border: 4px solid black; */
        display: flex;
        flex-direction: column;
        gap: 1rem;
        justify-content: center;
        align-items: center;
    }

    .io{   
        width: 25vw;
        height: 4vh;
        background: none;
        border: 3px solid #af011d;
        color: white;
        font-weight: bold;
        font-size: 1rem;
        transition-property: all;
        transition-duration: 3s;
    }


    .io:hover,
    .io:focus{
        border-top: none;
        border-left: none;
        border-right: none;
        outline: none;
    }

    .font{
        font-size: 2.5rem;
    }
    
.btn{
    /* width: 10vw; */
    /* height: 6vh; */
    background: #af011d;
    color: white;
    /* border: 2px solid #7f0014; */
    font-weight: bold;
    font-size: 1.3rem;
    border-radius: 10%;
    margin-left: 1.5vw;

    padding: 6px;
    
}

.btn-fill-color{
    border: none;
    box-shadow: inset 0px 0px 0px none;
    transition-property: all;
    transition-duration: 0.6s;
}

.btn-fill-color:hover{
    justify-content: center;
    box-shadow: inset 10vw 0px 0px white;
    color: red;
    border-radius: 10px;
    text-decoration: underline;
}

</style>

<body>   
    <div class="bigbox">
        <div class="mainBox">
            <h1 class="font">Login</h1>
            <div class="form">
                <input type="text" class="io" placeholder="Enter your username" id="username">
                <input type="password" class="io" placeholder="Enter your password" id="password">
                <button id="btnLog" class="btn btn-fill-color">
                    Login Now
                </button>
            </div>
        </div>
    </div>
</body>


<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
    
    let btnLog = document.getElementById('btnLog');

    btnLog.addEventListener('click' ,async function(e){

        let username = document.getElementById('username').value;
        let password = document.getElementById('password').value;

        if(username == '' || password == ''){
            alert('Fill all details');
        }
        else{

            let resp = await axios.post('/login' , {username , password});

            console.log('resp->' , resp);

            if(resp.data != 'user Logged In successfully'){
                let msg = resp.data;
                alert(msg);
            }
            else{
                alert('user Logged In successfully');
                window.location = '/';
            }
        }

    })
</script>



