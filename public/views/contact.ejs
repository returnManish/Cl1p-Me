<div class="bigboss">
    <div class="mainBox">
        <h1>Contact Us</h1>
        <h3>Eager to hear your feedback (:</h3>
        <div class="form">
            <input type="text" class="io font" id="name" placeholder="Name">
            <input type="text" class="io font" id="email" placeholder="Email">
            <input type="text" class="io font" id="pno" placeholder="Phone Number">
            <textarea name="Message" class="io font iomessage" id="mess" cols="3" rows="6"
                placeholder="Message"></textarea>
            <button class="btn  btn-fill-color" id="btn">
                Submit Form
            </button>
        </div>
    </div>
</div>

<!-- axios fetch -->
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>

    let btn = document.getElementById('btn');

        btn.addEventListener('click' ,async function(e){
        let email = document.getElementById('email').value;
        let name = document.getElementById('name').value;
        let phone = document.getElementById('pno').value;
        let mess = document.getElementById('mess').value;

        if(email == '' || name == '' || mess == ''){
            alert('fill all details')
        }
        else{
            if (String(email).toLowerCase().match(/^\S+@\S+\.\S+$/)) {
                let resp = await axios.post('/contact', {
                    name, phone, email, mess
                });

                console.log(resp);
                if (resp.data != 'Form submitted') {
                    alert('server error, Try again');
                }
                else{
                    alert('Form Submitted Successfully');
                }
            }
            else {
                document.getElementById('email').value = '';
                alert('Enter valid email address');
            }
        }
    })

</script>